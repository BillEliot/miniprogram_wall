<van-dialog id="van-dialog" />
<view class="container">
  <van-popup
    show="{{ show_classes }}"
    position="bottom"
    bind:close="onClose_Classes"
  >
    <van-picker
      columns="{{ columns_classes }}"
      bind:change="onChange_Classes"
    />
  </van-popup>
  <van-popup
    show="{{ show_gender }}"
    position="bottom"
    bind:close="onClose_Gender"
  >
    <van-picker
      columns="{{ columns_gender }}"
      bind:change="onChange_Gender"
    />
  </van-popup>

  <van-cell-group>
    <van-field
      value="{{ email.value }}"
      label="E-mail"
      placeholder="请输入E-mail"
      error="{{ email.error }}"
      error-message="{{ email.error_message }}"
      required
      bind:change="onChange_email"
    />
    <van-field
      value="{{ email.password }}"
      label="密码"
      placeholder="请输入密码"
      password
      error="{{ password.error }}"
      error-message="{{ password.error_message }}"
      required
      bind:change="onChange_password"
    />
    <van-field
      value="{{ password2.value }}"
      label="确认密码"
      placeholder="请确认密码"
      password
      error="{{ password2.error }}"
      error-message="{{ password2.error_message }}"
      bind:change="onChange_password2"
      required
    />
    <van-field
      value="{{ nickname.value }}"
      label="昵称"
      placeholder="请输入昵称"
      error="{{ nickname.error }}"
      error-message="{{ nickname.error_message }}"
      required
      bind:change="onChange_nickname"
    />
    <van-field
      label="个性签名"
      placeholder="请输入个性签名"
      error="{{ bio.error }}"
      error-message="{{ bio.error_message }}"
      required
      bind:change="onChange_bio"
    />
    <van-field
      value="{{ gender.value }}"
      label="性别"
      placeholder="请输入性别"
      bind:focus="OnFocus_Gender"
      error="{{ gender.error }}"
      error-message="{{ gender.error_message }}"
      required
      bind:change="onChange_gender"
    />
    <van-field
      value="{{ class.value }}"
      label="班级"
      placeholder="请选择班级"
      bind:focus="OnFocus_Classes"
      error="{{ class.error }}"
      error-message="{{ class.error_message }}"
      required
      bind:change="onChange_class"
    />
    <van-field
      value="{{ phone.value }}"
      label="手机"
      placeholder="请输入手机号"
      error="{{ phone.error }}"
      error-message="{{ phone.error_message }}"
      type="number"
      bind:change="onChange_phone"
    />
    <van-field
      value="{{ qq.value }}"
      label="qq"
      placeholder="请输入qq号"
      error="{{ qq.error }}"
      error-message="{{ qq.error_message }}"
      type="number"
      bind:change="onChange_qq"
    />
    <van-field
      value="{{ wechat.value }}"
      label="微信"
      placeholder="请输入微信号"
      bind:change="onChange_wechat"
    />
  </van-cell-group>
  <van-divider hairline />
  <van-button type="primary" size="large" bindtap="register">注册</van-button>
</view>
